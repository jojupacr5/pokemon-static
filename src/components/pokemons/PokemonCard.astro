---
interface Props {
  name: string;
  url: string;
  isBig?: boolean;
}

const { name, url, isBig = false } = Astro.props;
const id = url.split('/').at(-2);
const imgSrc = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png`
---
<!-- 
  class={`rounded flex flex-col justify-center items-center p-2 ${!isBig && 'border'}`} FUNCIONA 
  href={`/pokemon/${id}`}
-->
<a 
  href={`/pokemons/${name}`}
  class:list={[
    `rounded flex flex-col justify-center items-center p-2`,
    {
      border: !isBig
    }
  ]}
>
  <img 
    transition:name={`${name}-image`}
    class:list={[
      "w-16 h-16",
      {
        "w-36 h-36": isBig
      }
    ]}
    src={imgSrc} 
    alt={name}
  >
  <span 
    class:list={[
      "capitalize",
      {
        'text-3xl': isBig
      }
    ]}
    class="capitalize"
  >#{id} {name}</span>
</a>